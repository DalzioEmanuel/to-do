<div class="container">
  <a href="/"><h1>To-Do List</h1></a>
  <form action="/save" method="post">
    <input type="text" id="taskInput" placeholder="Enter your task" name="task">
    <button class="addButton" type="submit">Add</button>
  </form>
  <hr>
  <ul id="taskList">
    {{#each tasks}}
        <p>{{Task}}</p>
        <small>{{date}}</small>
          <br>
            <a href="/editar/{{this._id}}"><button class="addButton">Edit</button></a>
            <br>
            <br>
          <form action="/delete" method="post">
            <input type="hidden" name="id" value="{{_id}}">
            <button class="delButton" type="submit">Delete</button>
          </form>
          <hr>
    {{else}}
        <h4>No tasks Registered</h4>
    {{/each}}
  </ul>
</div>
